<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addservice"
    android:background="#000000">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/asptoback"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <ImageSwitcher
            android:id="@+id/asimageSwitcher"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#272424"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please upload more than one image"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#272424"
            android:layout_gravity="center_horizontal"
            android:hint="Enter service name"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:minHeight="50dp"
            android:id="@+id/asname"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#272424"
            android:layout_gravity="center_horizontal"
            android:hint="Enter your bargain price"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:minHeight="50dp"
            android:id="@+id/asprice"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#272424"
            android:layout_gravity="center_horizontal"
            android:hint="Enter a little description about your service"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:minHeight="50dp"
            android:id="@+id/asdesc"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#272424"
            android:layout_gravity="center_horizontal"
            android:hint="Enter your location"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:minHeight="50dp"
            android:id="@+id/asloc"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:text="select service category"/>
        <RadioGroup
            android:id="@+id/radioGroupser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radioBtn1s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="home_services"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/radioBtn2s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entertainment"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioBtn3s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="beauty_and_fashion"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioBtn4s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="travel"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioBtn5s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="business_services"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/radioBtn6s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="health"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioBtn7s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="housing"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/radioBtn8s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="repair_and_maintenance"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/radioBtn9s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="others"
                android:textColor="@color/white"/>

        </RadioGroup>

    </LinearLayout>
    </ScrollView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/nextBtn"
        android:src="@drawable/ic_baseline_navigate_next_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/previousBtn"
        android:src="@drawable/ic_baseline_navigate_before_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/pickImagesBtn"
        android:src="@drawable/ic_baseline_add_a_photo_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendsernow"
        android:src="@drawable/ic_baseline_send_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintVertical_bias="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>