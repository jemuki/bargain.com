<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="#f5f5f5">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/blackarrow"
        android:background="@null"
        android:id="@+id/logtoback"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="log in to your account"
            android:gravity="center_horizontal"
            android:textColor="#504D4D"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter email"
            android:textColor="#504D4D"
            android:textColorHint="#504D4D"
            android:id="@+id/logemail"
            android:drawableRight="@drawable/ic_baseline_email_24"
            android:inputType="text"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter password"
            android:textColor="#504D4D"
            android:textColorHint="#504D4D"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:id="@+id/logpassword"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="contact(with country code)"
            android:textColor="#504D4D"
           android:textColorHint="#504D4D"
            android:inputType="text"
            android:textAlignment="center"
            android:drawableRight="@drawable/ic_baseline_phone_enabled_24"
            android:layout_gravity="center"
            android:id="@+id/logcontact"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="login"
            android:textAllCaps="false"
            android:backgroundTint="#2196F3"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/nowlogin"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>