<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addproduct"
    android:background="#000000">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/adptoback"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <ImageSwitcher
            android:id="@+id/imageSwitcher"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#272424"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please upload more than one image"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"/>



        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#272424"
            android:layout_gravity="center_horizontal"
            android:hint="Enter product name"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:minHeight="50dp"
            android:id="@+id/apname"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#272424"
            android:layout_gravity="center_horizontal"
            android:hint="Enter your bargain price"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:minHeight="50dp"
            android:id="@+id/apprice"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#272424"
            android:layout_gravity="center_horizontal"
            android:hint="Enter a little description about your product"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:minHeight="50dp"
            android:id="@+id/apdesc"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#272424"
            android:layout_gravity="center_horizontal"
            android:hint="Enter your location"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:minHeight="50dp"
            android:id="@+id/aploc"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:text="select product category"
            android:id="@+id/selectprocategory"/>
        <RadioGroup
            android:id="@+id/radioGrouppro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radioBtn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="foods"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="fashion"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/radioBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="electronics"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="beauty_products"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioBtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="home_products"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioBtn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="automotive"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/radioBtn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stationery"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioBtn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="health_products"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/radioBtn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="construction_products"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/radioBtn10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="others"
                android:textColor="@color/white"/>



        </RadioGroup>

    </LinearLayout>
</ScrollView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/nextBtn"
        android:src="@drawable/ic_baseline_navigate_next_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/previousBtn"
        android:src="@drawable/ic_baseline_navigate_before_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/pickImagesBtn"
        android:src="@drawable/ic_baseline_add_a_photo_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendpronow"
        android:src="@drawable/ic_baseline_send_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintVertical_bias="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>